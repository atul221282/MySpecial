<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <StackLayout>
    <TextField hint="Email Address" keyboardType="email" id="tfEmailAddress" text="{{ email }}" />
    <TextField hint="Password" secure="true" id="tfPassword" text="{{ password }}" />
    <Button text="Sign In" tap="signIn" />
     <Progress value="{{ progress }}" />
  </StackLayout>
</Page>